<div class="jumbotron">
    <h1>Course Finder</h1>
    <p></p>
</div>

<p class="p-3 m-3 border border-primary bg-light">
    You must signup or login to see the courses and create your schedule.
</p>

<% if (true || loggedIn) { %>
    <form method="post" action="/courses/bySubject">
        Show Courses by Subject:
        <input type="text" name="subject"
               placeholder="e.g. COSI">
        <input type="submit">
    </form>
    <br>
    <form method="post" action="/courses/byInst">
        Show Courses by Instructor Email:
        <input type="text" name="email"
               placeholder="e.g. tjhickey">
        <input type="submit">
    </form>
    <br>
    <form method="post" action="/courses/byName">
        Show Courses by Name:
        <input type="text" name="name"
               placeholder="e.g. Data">
        <input type="submit">
    </form>
    <br>
    <form method="post" action="/courses/byTerm">
        Show Courses by Term: (Fall 2021: 1203, Spring 2022: 1211, Summer 2022: 1212)
        <br>
        <input type="text" name="term"
               placeholder="e.g. 1203">
        <input type="submit">
    </form>
    <br>
    <a href="/schedule/show">Show Schedule</a>
<% } %>


